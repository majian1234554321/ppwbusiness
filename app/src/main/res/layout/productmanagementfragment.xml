<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tl="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:orientation="vertical" android:layout_height="match_parent">


    <com.yjhh.ppwbusiness.views.cui.TitleBarView android:layout_width="match_parent"
                                                 app:textValue="商品管理"
                                                 android:id="@+id/tbv_title"
                                                 app:textColor="@color/white"
                                                 android:layout_height="wrap_content"/>


    <com.flyco.tablayout.SlidingTabLayout
            android:layout_below="@+id/tbv_title"
            android:id="@+id/mTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#666666"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            app:tl_tab_space_equal="true"

            app:tl_indicator_width_equal_title="true"
            tl:tl_tab_space_equal="true"
            tl:tl_textBold="SELECT"
            tl:tl_underline_color="#1A000000"
            tl:tl_underline_gravity="TOP"
            tl:tl_underline_height="1dp"/>


    <android.support.v4.view.ViewPager android:layout_width="match_parent"
                                       android:id="@+id/mViewPager"
                                       android:layout_above="@+id/ll"
                                       android:layout_below="@+id/mTabLayout"
                                       android:layout_height="match_parent"/>


    <LinearLayout android:layout_width="match_parent"
                  android:id="@+id/ll"
                  android:background="@color/all_e"
                  android:gravity="center"
                  android:layout_alignParentBottom="true"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="新建商品"
                  android:padding="@dimen/spi_12"
                  android:id="@+id/tv_add"
        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tv_sort"
                  android:text="商品排序"
        />

    </LinearLayout>

</RelativeLayout>