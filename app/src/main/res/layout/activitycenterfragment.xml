<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"

              android:layout_height="match_parent">


    <com.yjhh.ppwbusiness.views.cui.TitleBarView android:layout_width="match_parent"
                                                 app:textValue="活动中心"
                                                 app:textColor="@color/white"
                                                 android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_width="match_parent" android:layout_height="36dp"
            android:gravity="center"
    >

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:text="活动主题"
                  android:gravity="center"
                  android:layout_weight="1"
        />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:text="期号" android:gravity="center"
                  android:layout_weight="1"
        />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:text="活动状态" android:gravity="center"
                  android:layout_weight="1"
        />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:text="参与人数" android:gravity="center"
                  android:layout_weight="1"
        />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:text="开始时间" android:gravity="center"
                  android:layout_weight="1"
        />

    </LinearLayout>


    <com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                       android:layout_width="match_parent"
                                                       android:id="@+id/swipeLayout"
                                                       android:layout_height="match_parent">


        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/mRecyclerView"

                android:layout_height="match_parent"/>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>