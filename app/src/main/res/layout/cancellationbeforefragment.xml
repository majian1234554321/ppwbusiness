<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <com.yjhh.ppwbusiness.views.cui.TitleBarView android:layout_width="match_parent"
                                                 app:textValue="历史核销"
                                                 app:textColor="@color/white"
                                                 android:layout_height="wrap_content"/>


    <com.scwang.smartrefresh.layout.SmartRefreshLayout android:layout_width="match_parent"
                                                       android:id="@+id/swipeLayout"
                                                       android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                                android:id="@+id/mRecyclerView"
                                                android:paddingLeft="25pt"
                                                android:paddingRight="25pt"

                                                android:layout_height="match_parent"/>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>