<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"

                  android:layout_height="wrap_content">
        <com.yjhh.ppwbusiness.views.cui.TitleBarView android:layout_width="match_parent"
                                                     app:textValue="当前账户"
                                                     app:textColor="@color/white"
                                                     android:layout_height="wrap_content"/>


        <de.hdodenhof.circleimageview.CircleImageView android:layout_width="93pt" android:layout_height="93pt"
                                                      android:layout_gravity="center"
                                                      android:layout_marginTop="19pt"
                                                      android:layout_marginBottom="10pt"
                                                      android:src="@mipmap/ic_launcher"
        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="管理员账户"
                  android:paddingLeft="12pt"
                  android:paddingRight="12pt"
                  android:id="@+id/tv_text"
                  android:textColor="#FFC6AC81"
                  android:layout_marginBottom="25pt"
                  android:textSize="17pt"/>


        <LinearLayout android:layout_width="match_parent"
                      android:background="@color/white" android:layout_height="wrap_content">

            <com.yjhh.ppwbusiness.views.cui.ItemEntryView android:layout_width="match_parent"
                                                          app:ievtextValue="昵称"
                                                          android:paddingLeft="24pt"
                                                          android:id="@+id/iev_nickName"
                                                          android:paddingRight="12pt"
                                                          app:ievbackground="@color/white"
                                                          android:layout_height="wrap_content"/>
        </LinearLayout>

        <View android:layout_width="match_parent"
              android:background="@color/e6"
              android:layout_marginLeft="12pt"
              android:layout_marginRight="12pt"
              android:layout_height="1pt"/>


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:background="@color/white" android:layout_height="wrap_content">


            <com.yjhh.ppwbusiness.views.cui.ItemEntryView android:layout_width="match_parent"
                                                          android:paddingLeft="24pt"
                                                          android:paddingRight="12pt"
                                                          android:id="@+id/iev_reset"
                                                          app:ievtextValue="修改密码"
                                                          app:ievbackground="@color/white"
                                                          android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12pt"
                    android:text="账户信息"
                    android:textColor="#FF999999"
                    android:textSize="12pt"
            />

            <com.yjhh.ppwbusiness.views.cui.ItemEntryView2 android:layout_width="match_parent"
                                                           android:paddingLeft="24pt"
                                                           android:paddingRight="12pt"
                                                           android:id="@+id/iev_bank"
                                                           app:ievtextValue2="银行卡"
                                                           app:ievbackground="@color/white"
                                                           android:layout_height="wrap_content"/>
            <com.yjhh.ppwbusiness.views.cui.ItemEntryView2 android:layout_width="match_parent"
                                                           android:paddingLeft="24pt"
                                                           android:paddingRight="12pt"
                                                           android:id="@+id/iev_alipay"
                                                           app:ievtextValue2="支付宝"
                                                           app:ievbackground="@color/white"
                                                           android:layout_height="wrap_content"/>
            <com.yjhh.ppwbusiness.views.cui.ItemEntryView2 android:layout_width="match_parent"
                                                           android:paddingLeft="24pt"
                                                           android:paddingRight="12pt"
                                                           android:id="@+id/iev_wx"
                                                           app:ievtextValue2="微信"
                                                           app:ievbackground="@color/white"
                                                           android:layout_height="wrap_content"/>


        </LinearLayout>

        <com.google.android.material.button.MaterialButton android:layout_width="match_parent"
                                                           android:layout_gravity="bottom"
                                                           android:layout_marginBottom="20pt"
                                                           android:text="退出登录"
                                                           android:id="@+id/tv_loginOut"
                                                           android:layout_marginTop="80pt"
                                                           android:gravity="center"
                                                           android:layout_marginLeft="12pt"
                                                           android:layout_marginRight="12pt"
                                                           android:textColor="#FFF3DAAF"
                                                           android:textSize="15pt"
                                                           android:padding="9pt"
                                                           android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>