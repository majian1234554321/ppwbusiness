<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <com.yjhh.ppwbusiness.views.cui.TitleBarView android:layout_width="match_parent"
                                                     app:textValue="当前账户"
                                                     app:textColor="@color/white"
                                                     android:layout_height="wrap_content"/>

        <RelativeLayout android:layout_width="match_parent"
                        android:paddingTop="17.5pt"
                        android:paddingLeft="12pt"
                        android:paddingRight="12pt"
                        android:paddingBottom="10pt"
                        android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_centerInParent="true"
                      android:text="管理员账户"
                      android:paddingLeft="12pt"
                      android:paddingRight="12pt"
                      android:id="@+id/tv_text"
                      android:textColor="#FFC6AC81"
                      android:textSize="17pt"
            />

            <View android:layout_width="match_parent"
                  android:layout_centerVertical="true"

                  android:background="#E3DACB"
                  android:layout_toLeftOf="@+id/tv_text"
                  android:layout_height="1pt"/>


            <View android:layout_width="match_parent"
                  android:layout_centerVertical="true"

                  android:background="#E3DACB"
                  android:layout_toRightOf="@+id/tv_text"
                  android:layout_height="1pt"/>

        </RelativeLayout>


        <android.support.v7.widget.CardView android:layout_width="match_parent"
                                            android:layout_marginLeft="12pt"
                                            android:layout_marginTop="12pt"
                                            android:layout_marginRight="12pt"
                                            app:cardCornerRadius="@dimen/spi_8"
                                            app:cardElevation="1dp"
                                            android:layout_height="wrap_content">

            <com.yjhh.ppwbusiness.views.cui.ItemEntryView android:layout_width="match_parent"
                                                          app:ievtextValue="昵称"
                                                          android:paddingLeft="12pt"
                                                          app:ievbackground="@color/white"
                                                          android:layout_height="wrap_content"/>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView android:layout_width="match_parent"
                                            android:layout_margin="12pt"
                                            app:cardCornerRadius="@dimen/spi_8"
                                            app:cardElevation="1dp"
                                            android:layout_height="wrap_content">

            <com.yjhh.ppwbusiness.views.cui.ItemEntryView android:layout_width="match_parent"
                                                          android:paddingLeft="12pt"
                                                          app:ievtextValue="修改密码"
                                                          app:ievbackground="@color/white"
                                                          android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>


    </LinearLayout>

    <android.support.design.button.MaterialButton android:layout_width="match_parent"
                                                  android:layout_gravity="bottom"
                                                  android:layout_marginBottom="20pt"
                                                  android:text="退出登录"
                                                  android:id="@+id/tv_loginOut"
                                                  android:layout_alignParentBottom="true"
                                                  android:gravity="center"
                                                  android:layout_marginLeft="12pt"
                                                  android:layout_marginRight="12pt"
                                                  android:textColor="#FFF3DAAF"
                                                  android:textSize="15pt"
                                                  android:padding="9pt"
                                                  android:layout_height="wrap_content"/>

</RelativeLayout>