<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/white"
                android:layout_marginTop="10pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
>


    <TextView android:layout_width="wrap_content"
              android:textColor="#FF333333"
              android:textSize="14pt"
              android:id="@+id/tv_name"

              android:paddingLeft="12pt"
              android:layout_below="@+id/tv_time"
              android:paddingBottom="9pt"

              android:paddingTop="9pt"
              tools:text="201212"
              android:layout_height="wrap_content"/>


    <TextView android:layout_width="wrap_content"
              android:textColor="#FF2C85FF"
              android:textSize="14pt"
              android:drawableRight="@drawable/icon_uncallphone"
              android:drawablePadding="8pt"
              android:id="@+id/tv_phone"
              android:layout_alignParentRight="true"

              android:paddingRight="12pt"
              android:paddingBottom="9pt"
              android:layout_below="@+id/tv_time"
              android:paddingTop="9pt"
              android:text="2018/11/10"
              android:layout_height="wrap_content"/>


    <TextView android:layout_width="match_parent"
              android:gravity="center"
              android:textColor="#666666"
              android:textSize="14pt"
              android:id="@+id/tv_count"


              android:paddingLeft="12pt"
              android:paddingBottom="9pt"
              android:layout_below="@+id/tv_name"
              android:paddingTop="9pt"
              tools:text="人数：5"
              android:layout_height="wrap_content"/>


    <View
            android:layout_below="@+id/tv_count"
            android:id="@+id/view"
            android:layout_width="351pt"
            android:layout_centerHorizontal="true"
            android:layout_height="0.5pt"
            android:background="#FFE6E6E6"
    />


    <RelativeLayout android:layout_width="wrap_content"
                    android:paddingLeft="12pt"
                    android:paddingBottom="12pt"
                    android:paddingTop="12pt"
                    android:id="@+id/ll_control"
                    android:layout_below="@+id/view"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
                android:layout_width="95pt" android:layout_height="wrap_content"
                android:text="取消预约"
                android:padding="6pt"
                android:id="@+id/mb_cancel"
                android:textColor="#FFFF552E"
                android:textSize="13pt"
                app:strokeWidth="1dp"
                app:cornerRadius="0dp"
                app:strokeColor="#FFFF552E"
                app:rippleColor="#FFFF552E"
                app:backgroundTint="@color/white"
                android:layout_marginRight="15pt"
        />

        <com.google.android.material.button.MaterialButton
                android:layout_width="95pt"
                android:layout_toRightOf="@+id/mb_cancel"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15pt"
                android:text="接受预约"
                android:padding="6pt"
                android:id="@+id/mb_accept"
                app:cornerRadius="0dp"
                app:rippleColor="#FF54B36D"
                app:strokeColor="#FF54B36D"
                app:backgroundTint="@color/white"
                app:strokeWidth="1dp"
                android:textColor="#FF54B36D"
                android:textSize="13pt"
        />

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_status"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:textSize="13pt"
                  android:text="12121212"
        />


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情 "
                android:paddingRight="12pt"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="7.5pt"
                android:drawableRight="@drawable/icon_jiantou3"
                android:textColor="#FFC8AF85"
                android:textSize="12pt"
        />

    </RelativeLayout>


</RelativeLayout>