<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".views.merchant.MerchantSettingActivity">

    <com.yjhh.ppwbusiness.views.cui.TitleBarView android:layout_width="match_parent"
                                                 android:id="@+id/tbv_title"
                                                 app:textColor="@color/white"
                                                 app:textValue="商户设置"
                                                 android:layout_height="wrap_content"/>

    <android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
                                                android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical"
        >


            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">

                <ImageView android:layout_width="80dp"
                           android:layout_height="80dp"
                           android:id="@+id/iv_image"
                />

                <TextView android:layout_width="wrap_content"
                          android:layout_marginLeft="@dimen/sp_12"
                          tools:text="1212" android:layout_centerVertical="true"
                          android:layout_toRightOf="@+id/iv_image"
                          android:layout_height="wrap_content"/>

            </RelativeLayout>


            <RelativeLayout android:layout_width="match_parent"
                            android:padding="8dp"
                            android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:textSize="@dimen/sp_14"
                          android:text="商户状态"
                />

                <com.yjhh.ppwbusiness.views.cui.toggle.ToggleButton
                        android:layout_width="60dp"
                        android:layout_height="28dp"
                        android:layout_alignParentRight="true"
                        app:lib_pub_tbtn_colorPadding="@color/lib_pub_color_hint"
                        app:lib_pub_tbtn_colorThumb="@color/lib_pub_color_white"
                        app:lib_pub_tbtn_colorTrackOff="@color/lib_pub_color_white"
                        app:lib_pub_tbtn_colorTrackOpen="@color/lib_pub_color_main"
                        app:lib_pub_tbtn_duration="250"
                        app:lib_pub_tbtn_padding="1.5dp"/>

            </RelativeLayout>


            <com.yjhh.ppwbusiness.views.cui.ItemEntryView
                    android:layout_width="match_parent"
                    app:ievbackground="@color/white"
                    app:ievtextValue="营业时间"
                    android:id="@+id/tv_setTime"
                    app:ievtextColor="@color/all_9"
                    android:layout_height="wrap_content"/>

            <com.yjhh.ppwbusiness.views.cui.ItemEntryView
                    android:layout_width="match_parent"
                    app:ievbackground="@color/white"
                    app:ievtextValue="商户LOGO"
                    android:id="@+id/iev_logo"
                    app:ievtextColor="@color/all_9"
                    android:layout_height="wrap_content"/>


            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="商户名称"
            />

            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:background="@drawable/stroke_frame"
                      android:padding="4dp"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="商户电话"
            />

            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:background="@drawable/stroke_frame"
                      android:padding="4dp"
            />

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="商户地址"
            />

            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:background="@drawable/stroke_frame"
                      android:padding="4dp"
            />

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="商户描述"
            />

            <EditText android:layout_width="match_parent" android:layout_height="180dp"
                      android:gravity="left|top"
                      android:background="@drawable/stroke_frame"
                      android:padding="@dimen/sp_12"
            />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>