<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:gravity="center"
              android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView android:layout_width="78pt"
              tools:text="08:00"
              android:gravity="center"
              android:textSize="14pt"
              android:textStyle="bold"
              android:background="@drawable/stroke_frame_97"
              android:textColor="@color/all_6"
              android:id="@+id/tv_sTime"


              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content" android:gravity="center"
              android:text="至"
              android:textColor="@color/all_6"
              android:layout_margin="@dimen/spi_12"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="78pt" android:gravity="center"
              tools:text="09:00"
              android:textSize="14pt"
              android:textStyle="bold"
              android:textColor="@color/all_6"
              android:id="@+id/tv_eTime"
              android:background="@drawable/stroke_frame_97"
              android:layout_marginRight="@dimen/spi_12"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content" android:gravity="center"
              android:text="删除"
              android:textColor="@color/all_6"
              android:id="@+id/tv_delete"
              android:layout_height="wrap_content"/>

</LinearLayout>