<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:orientation="vertical"


        android:layout_width="match_parent" android:layout_height="match_parent">
    <com.yjhh.ppwbusiness.views.cui.TitleBarView android:layout_width="match_parent"
                                                 app:textValue="营业时间"
                                                 app:textColor="@color/white"
                                                 android:layout_height="wrap_content"/>


    <TextView android:layout_width="match_parent" android:layout_height="36dp"
              android:gravity="center_vertical"

              android:paddingLeft="@dimen/spi_12"
              android:textColor="@color/all_9"
              android:text="请设置营业时间段（最多3个）"
    />


    <android.support.v7.widget.RecyclerView
            android:background="@color/all_e"
            android:layout_width="match_parent"
            android:id="@+id/recyclerView"
            android:layout_height="wrap_content"/>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:id="@+id/tv_add"
              android:padding="@dimen/spi_12"
              android:textColor="@color/colorPrimary"
              android:text="添加时间段"
    />


</LinearLayout>