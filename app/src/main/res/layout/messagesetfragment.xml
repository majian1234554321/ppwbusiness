<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent" android:layout_height="match_parent">

    <com.yjhh.ppwbusiness.views.cui.TitleBarView android:layout_width="match_parent"
                                                 app:textValue="提醒设置"
                                                 app:textColor="@color/white"
                                                 android:layout_height="wrap_content"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:padding="8dp"
              android:textSize="@dimen/sp_16"
              android:text="消息提醒"/>


    <RelativeLayout android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:textSize="@dimen/sp_14"
                  android:text="语音播报"
        />

        <com.yjhh.ppwbusiness.views.cui.toggle.ToggleButton
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                app:lib_pub_tbtn_colorPadding="@color/lib_pub_color_hint"
                app:lib_pub_tbtn_colorThumb="@color/lib_pub_color_white"
                app:lib_pub_tbtn_colorTrackOff="@color/lib_pub_color_white"
                app:lib_pub_tbtn_colorTrackOpen="@color/lib_pub_color_main"
                app:lib_pub_tbtn_duration="250"
                app:lib_pub_tbtn_padding="1.5dp"/>

    </RelativeLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/all_e"
    />

    <RelativeLayout android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:gravity="center"
                  android:textSize="@dimen/sp_14"
                  android:text="新消息震动"
        />

        <com.yjhh.ppwbusiness.views.cui.toggle.ToggleButton
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                app:lib_pub_tbtn_colorPadding="@color/lib_pub_color_hint"
                app:lib_pub_tbtn_colorThumb="@color/lib_pub_color_white"
                app:lib_pub_tbtn_colorTrackOff="@color/lib_pub_color_white"
                app:lib_pub_tbtn_colorTrackOpen="@color/lib_pub_color_main"
                app:lib_pub_tbtn_duration="250"
                app:lib_pub_tbtn_padding="1.5dp"/>

    </RelativeLayout>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:padding="8dp"
              android:textSize="@dimen/sp_16"
              android:text="播放频率"
    />


    <RadioGroup android:layout_width="match_parent" android:layout_height="wrap_content">
        <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:text="循环播放"
                     android:checked="true"
        />
        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/all_e"
        />
        <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:text="播放三遍"
        />
    </RadioGroup>


</LinearLayout>